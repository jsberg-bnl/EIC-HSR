 pr8wxd0[x_pitch] : -xpx,
 pt8wxd0[x_offset] : +xox,
 pr8dint0[x_pitch] : +xpi,
 pr8dint1[x_pitch] : +xpi,
 pr8dxd0[x_pitch] : +xpx,
 pt8dxd0[x_offset] : +xox},
